
   <div id="body">
     <div id="header">
       <h1>短縮URL生成</h1>
     </div>

     <div class="main">
       <form method="GET" action="#" >
	 <dl>
	   <dt>短縮URL</dt>
	   <dd><input type="text" name="org_url" size="50" value="{$org_url}" /></dd>
	   {if isset($err_url)}
	     <dd>{$err_url}</dd>
	   {/if}
	   <dt>希望文字</dt>
	   <dd><input type="text" name="shchar" size="10" value="{$shchar}" /></dd>
	   <dd>{$minchar}文字以上の文字を入れてください。</dd>
	   {if isset($err_shchar)}
	     <dd>{$err_shchar}</dd>
	   {/if}
	   {if isset($shurl)}
	     <dt>短縮URL</dt>
	     <dd><input type="text" name="shurl" size="50" value="{$shurl}" /></dd>
	     </dt>
	   {/if}
	   <dd>
	 </dl>
	 <input type="hidden" name="mode" value="gen" />
	 <input type="submit" value="短縮URL生成" />
	 <input type="reset" value="取り消し" />
       </form>
     </div>
   </div>



   
